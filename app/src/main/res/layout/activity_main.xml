<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       tools:ignore="Missingconstaints">

       <Button
           android:id="@+id/fragmentMerah"
           android:layout_width="180dp"
           android:layout_height="50dp"
           android:layout_below="@id/toolbar"
           android:text="KULINER"
           tools:ignore="MissingConstraints,TouchTargetSizeCheck,UnknownId,DuplicateClickableBoundsCheck" />

       <Button
           android:id="@+id/fragmentBiru"
           android:layout_width="180dp"
           android:layout_height="50dp"
           android:layout_below="@id/toolbar"
           android:layout_alignParentRight="true"
           android:text="TL"
           tools:ignore="DuplicateClickableBoundsCheck" />

       <Button
           android:id="@+id/PPLG"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_below="@+id/TO"
           android:text="PPLG"/>

       <Button
           android:id="@+id/TO"
           android:layout_width="180dp"
           android:layout_height="50dp"
           android:layout_below="@id/fragmentMerah"
           android:text="TO"
           tools:ignore="MissingContraints"
           />

       <Button
           android:id="@+id/fragmentBusana"
           android:layout_width="180dp"
           android:layout_height="50dp"
           android:text="BUSANA"
           android:layout_alignParentRight="true"
           android:layout_below="@id/fragmentBiru"
           tools:ignore="MissingConstraints"/>

       <androidx.appcompat.widget.Toolbar
           android:id="@+id/toolbar"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="?attr/colorPrimary"
           android:minHeight="?attr/actionBarSize"
           android:theme="?attr/actionBarTheme"/>



   </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PPLG"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="NotSibling,UnknownId" >

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>